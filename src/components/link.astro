---
import { getCollection } from 'astro:content';

const { data } = Astro.props;

const items = await getCollection(data);
---

<style>
  ul {
    list-style-type: none;  
    padding-left: 2px;
  }

  li {
    display: flex;
    align-items: center;
    margin: 10px 0;
    gap: 5px;
  }

  span {
  }

  img {
    flex-shrink: 0;
    width: 88px;
    height: 31px;
  }

  a {
    word-break: keep-all;
  }

  @media (max-width: 992px) {
    li {
      display: grid;
      grid-template-columns: auto 1fr; /* Imagen y URL en la misma l√≠nea */
      gap: 5px 5px;
      align-items: center;
    }

    span {
      grid-column: 1 / -1; /* El span ocupa toda la fila */
    }

    .separator {
      display: none;
    }
</style>

<ul>
  {items.length > 0 && items.map((item) => (
    <li key={item.data.url}>
      <a href={item.data.url}>
        <img src={item.data.imageSrc} alt={item.data.imageAlt} />
      </a>
      <a href={item.data.url}>{item.data.linkText}</a>
      <span class="separator"> - </span>
      <span>{item.data.additionalText}</span>
    </li>
  ))}
</ul>
