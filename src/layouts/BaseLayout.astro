---
import '../style.css';
import Navbar from '../components/navbar.astro';
import Footer from '../components/footer.astro';
import { ViewTransitions } from "astro:transitions";

const {pageTitle, pageDescription} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={pageDescription}>
    <link href="https://fonts.cdnfonts.com/css/ibm-plex-mono-3" rel="stylesheet">
    <link rel="canonical" href={`https://edmateo.site${Astro.url.pathname}`} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/firacode/6.2.0/fira_code.min.css'>
    <title>{pageTitle} | edmateo.site</title>
	</head>
	<body>
    <div class="wrapper">
      <Navbar /> 
      <div class="content-wrapper">
        <main>
          <h1>{pageTitle}</h1>
          <slot />
        </main>
        <aside class="monachina">
          <img src="/static/niko.jpg" aria-hidden="true">
        </aside>
      </div>
      <Footer />
    </div>
	</body>
</html>
